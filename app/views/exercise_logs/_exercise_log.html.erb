<div id="<%= dom_id(exercise_log) %>" class="p-4">
  <div class="flex flex-col sm:flex-row justify-between sm:items-center gap-2 mb-3">
    <div>
      <h3 class="text-lg font-medium mb-2"><%= exercise_log.exercise.name %></h3>
      <div class="flex flex-wrap gap-2">
        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-blue-50 text-blue-700">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 mr-1" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
            <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
          </svg>
          <%= exercise_log.exercise.category %>
        </span>
        
        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-purple-50 text-purple-700">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 mr-1" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M6 3h12l4 6-10 13L2 9z"></path>
          </svg>
          <%= exercise_log.exercise.equipment_type %>
        </span>
        
        <% if exercise_log.equipment_brand.present? %>
          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-50 text-green-700">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 mr-1" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
              <line x1="7" y1="7" x2="7.01" y2="7"></line>
            </svg>
            <%= exercise_log.equipment_brand %>
          </span>
        <% end %>
      </div>
    </div>
    <div class="flex gap-2">
      <%= link_to new_workout_exercise_log_exercise_set_path(workout, exercise_log), class: "text-indigo-600 hover:text-indigo-800 text-sm" do %>
        Add Set
      <% end %>
      <%= button_to workout_exercise_log_path(workout, exercise_log),
                    method: :delete,
                    class: "text-red-600 hover:text-red-800 text-sm",
                    form: { data: { turbo_confirm: "Are you sure you want to delete this exercise?" } } do %>
        Delete
      <% end %>
    </div>
  </div>

  <% if exercise_log.notes.present? %>
    <div class="bg-gray-50 rounded-lg p-3 mb-3 text-sm">
      <p class="font-medium mb-1">Notes:</p>
      <p class="text-gray-700"><%= exercise_log.notes %></p>
    </div>
  <% end %>

  <%= render "exercise_sets/table", workout: workout, exercise_log: exercise_log %>
</div> 