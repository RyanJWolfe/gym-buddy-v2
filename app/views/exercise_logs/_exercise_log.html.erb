<%# locals: ( exercise_log:, editing: true ) %>

<div id="<%= dom_id(exercise_log) %>" class="flex flex-col gap-y-2 bg-white sm:rounded-lg shadow p-4 -mx-4 sm:mx-0">
  <div class="flex justify-between items-start">
    <div class="flex flex-col gap-y-1">
      <h3 class="text-lg text-gray-900"><%= exercise_log.exercise.name %></h3>
      <div class="flex flex-wrap gap-2">
        <span class="inline-flex items-center rounded-full text-xs font-medium text-blue-700">
          <%= inline_svg_tag "icons/book.svg", class: "h-3.5 w-3.5 mr-1" %>
          <%= exercise_log.exercise.category %>
        </span>

        <span class="inline-flex items-center rounded-full text-xs font-medium text-purple-700">
          <%= inline_svg_tag "icons/triangle.svg", class: "h-3.5 w-3.5 mr-1" %>
          <%= exercise_log.exercise.equipment_type %>
        </span>

        <% if exercise_log.equipment_brand.present? %>
          <span class="inline-flex items-center rounded-full text-xs font-medium text-green-700">
            <%= inline_svg_tag "icons/tag.svg", class: "h-3.5 w-3.5 mr-1" %>
            <%= exercise_log.equipment_brand %>
          </span>
        <% end %>
      </div>
      <% if exercise_log.notes.present? %>
        <p class="text-sm text-muted"><%= exercise_log.notes %></p>
      <% end %>
    </div>
    <div class="dropdown relative" data-controller="dropdown">
      <button data-action="click->dropdown#toggle" class="p-1 hover:bg-gray-100 rounded-lg">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z" />
        </svg>
      </button>
      <div data-dropdown-target="menu" class="hidden absolute right-0 mt-1 w-36 bg-white rounded-md shadow-lg z-10">
        <div class="py-1">
          <%= link_to "Edit", edit_workout_exercise_log_path(exercise_log.workout, exercise_log), data: { turbo_stream: true }, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
          <%= button_to "Remove", workout_exercise_log_path(exercise_log.workout, exercise_log), method: :delete, class: "w-full text-left block px-4 py-2 text-sm text-red-600 hover:bg-gray-100", form: { data: { turbo_confirm: "Are you sure you want to remove this exercise?" } } %>
        </div>
      </div>
    </div>

  </div>

  <%= render "exercise_sets/table", workout: exercise_log.workout, exercise_log: exercise_log, editing: editing %>
</div>