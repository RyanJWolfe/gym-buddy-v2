<%= form_with(model: [@workout, @exercise_log], class: "space-y-4") do |form| %>
  <% if @exercise_log.errors.any? %>
    <div class="bg-red-50 text-red-700 p-4 rounded mb-4">
      <h2 class="font-bold mb-2"><%= pluralize(@exercise_log.errors.count, "error") %> prohibited this exercise from being saved:</h2>
      <ul class="list-disc pl-5">
        <% @exercise_log.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :exercise_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.collection_select :exercise_id, @exercises, :id, :name, { prompt: "Select an exercise" }, 
                              { class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" } %>
    <div class="mt-1 text-sm text-gray-500">
      <%= link_to "Can't find your exercise? Create a new one", new_exercise_path, target: "_blank" %>
    </div>
  </div>

  <div>
    <%= form.label :equipment_brand, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :equipment_brand, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    <div class="mt-1 text-sm text-gray-500">Optional: e.g., "Hammer Strength", "Rogue", etc.</div>
  </div>

  <div>
    <%= form.label :notes, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :notes, rows: 3, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    <div class="mt-1 text-sm text-gray-500">Optional: any notes about this exercise</div>
  </div>

  <div class="flex justify-end space-x-2">
    <%= link_to "Cancel", workout_path(@workout), class: "bg-gray-200 text-gray-700 px-4 py-2 rounded hover:bg-gray-300" %>
    <%= form.submit class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
  </div>
<% end %> 