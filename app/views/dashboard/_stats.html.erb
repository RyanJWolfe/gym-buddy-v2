<div class="flex flex-col gap-y-3">
  <div class="flex items-center justify-between">
    <h2 class="text-lg font-extramedium">Stats</h2>
    <%= link_to dashboard_path, class: "flex items-center gap-x-1 text-sm text-primary hover:text-primary-hover font-medium hover:underline" do %>
      View All
      <%= inline_svg_tag "icons/chevron-right.svg", class: "h-4 w-4" %>
    <% end %>
  </div>

  <div class="grid grid-cols-2 gap-3">

    <div class="bg-blue-200/60 rounded-2xl p-3">
      <div class="flex items-center gap-x-3">
        <%= inline_svg_tag "icons/dumbbell.svg", class: "h-5 w-5 text-blue-500" %>
        <div class="flex flex-col leading-tight">
          <h3 class="text-sm font-medium">Workouts</h3>
          <span class="text-muted-light text-xs">All time</span>
        </div>
      </div>

      <div class="mt-2 text-2xl font-semibold">
        <%= @workout_count %>
        <span class="text-base text-muted font-medium">sessions</span>
      </div>
    </div>

    <div class="bg-blue-200/60 rounded-2xl p-3">
      <div class="flex items-center gap-x-3">
        <%= inline_svg_tag "icons/weight.svg", class: "h-5 w-5 text-blue-500" %>
        <div class="flex flex-col leading-tight">
          <h3 class="text-sm font-medium">Tonnage Lifted</h3>
          <span class="text-muted-light text-xs">All time</span>
        </div>
      </div>

      <div class="mt-2 text-2xl font-semibold">
        <%= number_with_delimiter(abbreviate_weight(format_weight(@total_volume))) %>
        <span class="text-base text-muted font-medium">lbs</span>
      </div>
    </div>

    <div class="bg-blue-200/60 rounded-2xl p-3">
      <div class="flex items-center gap-x-3">
        <%= inline_svg_tag "icons/weight.svg", class: "h-5 w-5 text-blue-500" %>
        <div class="flex flex-col leading-tight">
          <h3 class="text-sm font-medium">Tonnage Lifted</h3>
          <span class="text-muted-light text-xs">All time</span>
        </div>
      </div>

      <div class="mt-2 text-2xl font-semibold">
        <%= number_with_delimiter(abbreviate_weight(format_weight(@total_volume))) %>
        <span class="text-base text-muted font-medium">lbs</span>
      </div>
    </div>


    <div class="bg-blue-200/60 rounded-2xl p-3">
      <div class="flex items-center gap-x-3">
        <%= inline_svg_tag "icons/weight.svg", class: "h-5 w-5 text-blue-500" %>
        <div class="flex flex-col leading-tight">
          <h3 class="text-sm font-medium">Tonnage Lifted</h3>
          <span class="text-muted-light text-xs">All time</span>
        </div>
      </div>

      <div class="mt-2 text-2xl font-semibold">
        <%= number_with_delimiter(abbreviate_weight(format_weight(@total_volume))) %>
        <span class="text-base text-muted font-medium">lbs</span>
      </div>
    </div>


  </div>
</div>