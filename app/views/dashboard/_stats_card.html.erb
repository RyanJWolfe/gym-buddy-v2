<%# locals: ( title:, subtitle:, icon:, value:, label: ) %>

<div class="bg-blue-200/60 dark:bg-blue-900 rounded-2xl p-3 shadow">
  <div class="flex items-center gap-x-3">
    <%= inline_svg_tag "icons/#{icon}", class: "h-5 w-5 text-blue-500 dark:text-blue-400" %>
    <div class="flex flex-col leading-tight">
      <h3 class="tracking-wide text-sm font-medium"><%= title %></h3>
      <span class="text-muted-light dark:text-[#8d9fce] text-xs"><%= subtitle %></span>
    </div>
  </div>

  <div class="mt-2 text-2xl font-semibold">
    <%= value %>
    <span class="text-base text-muted-light dark:text-[#a1afb9] font-medium"><%= label %></span>
  </div>
</div>