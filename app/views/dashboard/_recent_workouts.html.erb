<% if @recent_workouts.any? %>

  <div class="flex flex-col gap-y-3">
    <div class="flex items-center justify-between">
      <h2 class="text-lg font-extramedium">Recent Workouts</h2>
      <%= link_to workouts_path, class: "flex items-center gap-x-1 text-sm text-primary hover:text-primary-hover font-medium hover:underline" do %>
        Show All
        <%= inline_svg_tag "icons/chevron-right.svg", class: "h-4 w-4" %>
      <% end %>
    </div>
    <div class="flex flex-col gap-y-3">
      <%= render partial: "dashboard/workout_card", collection: @recent_workouts, as: :workout %>
    </div>
<% else %>
  <div class="pt-6 flex flex-col items-center gap-y-4">
    <%= inline_svg_tag "icons/notebook.svg", class: "h-12 w-12 text-primary" %>
    <p class="text-muted-light">You haven't logged any workouts yet.</p>
    <%= link_to "Create Your First Workout!", workout_start_path, class: "btn btn-primary" %>
  </div>
  </div>
<% end %>
