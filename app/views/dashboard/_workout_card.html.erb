<%= link_to workout_path(workout),
            class: "block p-4 bg-surface-secondary border border-surface-border border-l-4 border-l-primary rounded-xl
            hover:bg-surface-secondary-hover transition duration-150 shadow-sm" do %>
  <div class="space-y-4">
    <div class="flex flex-col gap-y-2">
      <h3 class="font-medium">
        <%= workout.name %> <%= render_sequence_number(workout) %>
      </h3>
      <% if workout.routine.present? %>
        <div title="routine" aria-label="routine for workout" class="pill-sm pill-primary w-fit">
          <%= inline_svg_tag "icons/clipboard.svg", class: "w-3 h-3" %>
          <%= workout.routine.name %>
        </div>
      <% end %>
    </div>
    <div class="flex flex-wrap items-center gap-x-4 gap-y-2">
      <div class="flex items-center gap-x-1 text-sm text-muted">
        <%= inline_svg_tag "icons/clock.svg", class: "w-4 h-4" %>
        <span> <%= time_ago_in_words(workout.start_time) %> ago</span>
      </div>
      <div class="flex items-center gap-x-1 text-sm text-muted">
        <%= inline_svg_tag "icons/watch.svg", class: "w-4 h-4" %>
        <span> <%= format_duration_seconds(workout.duration_seconds) %></span>
      </div>
      <div class="flex items-center gap-x-1 text-sm text-muted">
        <%= inline_svg_tag "icons/dumbbell.svg", class: "w-4 h-4" %>
        <span> <%= pluralize(workout.total_exercises, 'exercise') %></span>
      </div>
      <div class="flex items-center gap-x-1 text-sm text-muted">
        <%= inline_svg_tag "icons/tally-5.svg", class: "w-4 h-4" %>
        <span> <%= pluralize(workout.total_sets, 'set') %></span>
      </div>
    </div>
  </div>
<% end %>