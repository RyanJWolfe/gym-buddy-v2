<tr id="<%= dom_id(set) %>" class="hover:bg-gray-50">
  <td class="px-3 py-2 text-sm text-gray-900"><%= set.set_number %></td>
  <td class="px-3 py-2 text-sm text-gray-900"><%= format_weight(set.weight) %> kg</td>
  <td class="px-3 py-2 text-sm text-gray-900"><%= set.reps %></td>
  <td class="px-3 py-2 text-sm text-gray-900"><%= format_weight(set.volume) %> kg</td>
  <td class="px-3 py-2 text-sm text-gray-500"><%= set.rest_seconds ? "#{set.rest_seconds}s" : "-" %></td>
  <td class="px-3 py-2 text-sm text-gray-500 hidden sm:table-cell"><%= set.notes.present? ? truncate(set.notes, length: 20) : "-" %></td>
  <td class="px-3 py-2 text-right text-sm">
    <div class="flex justify-end gap-2">
      <%= link_to "Edit", edit_workout_exercise_log_exercise_set_path(workout, exercise_log, set), class: "text-indigo-600 hover:text-indigo-800" %>
      <%= button_to "Delete",
                    workout_exercise_log_exercise_set_path(workout, exercise_log, set),
                    method: :delete,
                    class: "text-red-600 hover:text-red-800",
                    form: { data: { turbo_confirm: "Are you sure you want to delete this set?" } } %>
    </div>
  </td>
</tr> 