<%= form_with(model: [@workout, @exercise_log, @set], class: "space-y-6") do |form| %>
  <% if @set.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded mb-4">
      <h2 class="font-bold text-red-700 mb-2"><%= pluralize(@set.errors.count, "error") %> prohibited this set from being saved:</h2>
      <ul class="list-disc pl-5 text-red-700">
        <% @set.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div>
      <%= form.label :set_number, class: "form-label" %>
      <%= form.text_field :set_number, disabled: true, class: "form-input" %>
      <%= form.hidden_field :set_number %> <!-- Hidden field to submit set_number -->
    </div>

    <div>
      <%= form.label :weight, "Weight (kg)", class: "form-label" %>
      <%= form.number_field :weight, step: 1, class: "form-input" %>
    </div>

    <div>
      <%= form.label :reps, class: "form-label" %>
      <%= form.number_field :reps, class: "form-input" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= form.label :rest_seconds, "Rest (seconds)", class: "form-label" %>
      <%= form.number_field :rest_seconds, class: "form-input" %>
      <div class="form-muted-label">Optional</div>
    </div>

    <div>
      <%= form.label :duration_seconds, "Duration (seconds)", class: "form-label" %>
      <%= form.number_field :duration_seconds, class: "form-input" %>
      <div class="form-muted-label">Optional</div>
    </div>
  </div>

  <div>
    <%= form.label :notes, class: "form-label" %>
    <%= form.text_field :notes, class: "form-input" %>
    <div class="form-muted-label">Optional: e.g., "slow negative", "drop set", etc.</div>
  </div>

  <div class="flex justify-end space-x-2">
    <%= link_to "Cancel", workout_path(@workout), class: "btn btn-tertiary" %>
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>