<%= form_with(model: [@workout, @exercise_log, @set], class: "space-y-6") do |form| %>
  <% if @set.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded mb-4">
      <h2 class="font-bold text-red-700 mb-2"><%= pluralize(@set.errors.count, "error") %> prohibited this set from being saved:</h2>
      <ul class="list-disc pl-5 text-red-700">
        <% @set.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div>
      <%= form.label :set_number, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :set_number, disabled: true, class: "form-field" %>
      <%= form.hidden_field :set_number %> <!-- Hidden field to submit set_number -->
    </div>

    <div>
      <%= form.label :weight, "Weight (kg)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :weight, step: 1, class: "form-field" %>
    </div>

    <div>
      <%= form.label :reps, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :reps, class: "form-field" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= form.label :rest_seconds, "Rest (seconds)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :rest_seconds, class: "form-field" %>
      <div class="mt-1 text-sm text-gray-500">Optional</div>
    </div>

    <div>
      <%= form.label :duration_seconds, "Duration (seconds)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :duration_seconds, class: "form-field" %>
      <div class="mt-1 text-sm text-gray-500">Optional</div>
    </div>
  </div>

  <div>
    <%= form.label :notes, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :notes, class: "form-field" %>
    <div class="mt-1 text-sm text-gray-500">Optional: e.g., "slow negative", "drop set", etc.</div>
  </div>

  <div class="flex justify-end space-x-2">
    <%= link_to "Cancel", workout_path(@workout), class: "bg-gray-200 text-gray-700 px-4 py-2 rounded hover:bg-gray-300" %>
    <%= form.submit "Save", class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 cursor-pointer" %>
  </div>
<% end %>