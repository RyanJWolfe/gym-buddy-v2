<div class="max-w-lg mx-auto w-full my-8">
  <div id="user-info" class="flex flex-col items-center justify-center gap-y-1">
    <%= render_avatar current_user, size: :xl %>
    <h1 class="text-2xl font-bold"><%= current_user.name || current_user.email %></h1>
    <p class="text-muted text-sm"><%= current_user.email %></p>
    <%= link_to settings_profile_path, class: "mt-2 btn btn-primary font-normal flex items-center gap-x-1 rounded-full px-3 py-1.5" do %>
      Edit Profile
      <%= inline_svg('icons/chevron-right.svg', class: "h-4 w-4") %>
    <% end %>
  </div>
  <div class="text-muted mt-6 text-sm">Content</div>
  <div id="preferences-list" class="mt-4 flex flex-col gap-y-4">
    <%= link_to root_path do %>
      <%= render 'preference', icon: "icons/home.svg", label: "Dashboard", value: "" %>
    <% end %>
    <%= link_to groups_path do %>
      <%= render 'preference', icon: "icons/users.svg", label: "Groups", value: "" %>
    <% end %>
    <%= link_to root_path do %>
      <%= render 'preference', icon: "icons/calendar.svg", label: "Plans", value: "" %>
    <% end %>
  </div>

  <div class="text-muted mt-6 text-sm">Preferences</div>

  <div id="preferences-list" class="mt-4 flex flex-col gap-y-4">
    <%= render 'preference', icon: "icons/globe.svg", label: "Language", value: "English" %>
    <%= render 'preference', icon: "icons/bell.svg", label: "Notifications", value: "Disabled" %>
    <%= render 'preference', icon: "icons/moon.svg", label: "Theme", value: "Light" %>
  </div>
</div>