<div class="mb-6">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold">Your Profile</h1>
    <%= link_to "Edit Profile", edit_profile_path, class: "btn btn-primary" %>
  </div>
  
  <div class="bg-white rounded-lg shadow overflow-hidden mb-6">
    <div class="p-6">
      <div class="flex items-center mb-6">
        <div class="bg-indigo-100 text-indigo-600 rounded-full p-4 mr-4">
          <span class="text-2xl font-bold"><%= @user.name ? @user.name.first.upcase : @user.email.first.upcase %></span>
        </div>
        <div>
          <h2 class="text-xl font-bold"><%= @user.name || "User" %></h2>
          <p class="text-gray-600"><%= @user.email %></p>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-gray-50 p-4 rounded">
          <p class="text-sm text-gray-600">Total Workouts</p>
          <p class="text-2xl font-bold text-indigo-600"><%= @total_workouts %></p>
        </div>
        
        <div class="bg-gray-50 p-4 rounded">
          <p class="text-sm text-gray-600">Total Volume</p>
          <p class="text-2xl font-bold text-indigo-600"><%= number_with_delimiter(@total_volume) %> kg</p>
        </div>
        
        <div class="bg-gray-50 p-4 rounded">
          <p class="text-sm text-gray-600">Current Streak</p>
          <p class="text-2xl font-bold text-indigo-600"><%= @workout_streak %> days</p>
        </div>
        
        <div class="bg-gray-50 p-4 rounded">
          <p class="text-sm text-gray-600">Favorite Exercise</p>
          <p class="text-2xl font-bold text-indigo-600"><%= @favorite_exercise&.name || "N/A" %></p>
        </div>
      </div>
      
      <div class="border-t pt-6">
        <h3 class="text-lg font-semibold mb-4">Account Settings</h3>
        
        <div class="space-y-4">
          <div>
            <p class="text-sm text-gray-600">Email</p>
            <p class="font-medium"><%= @user.email %></p>
          </div>
          
          <div>
            <p class="text-sm text-gray-600">Member Since</p>
            <p class="font-medium"><%= @user.created_at.strftime("%B %d, %Y") %></p>
          </div>
          
          <div class="pt-4 flex space-x-4">
            <%= link_to "Edit Profile", edit_profile_path, class: "text-indigo-600 hover:text-indigo-800" %>
            <%= link_to "Change Password", edit_user_registration_path, class: "text-indigo-600 hover:text-indigo-800" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 