<div class="max-w-2xl mx-auto">
  <h1 class="text-2xl font-bold mb-6">Edit Profile</h1>
  
  <div class="bg-white rounded-lg shadow p-6">
    <%= form_with(model: @user, url: profile_path, method: :patch, class: "space-y-4") do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 text-red-700 p-4 rounded mb-4">
          <h2 class="font-bold mb-2"><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h2>
          <ul class="list-disc pl-5">
            <% @user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>

      <div>
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>

      <div class="pt-4">
        <p class="text-sm text-gray-600 mb-2">To change your password, please visit the <%= link_to "password change page", edit_user_registration_path, class: "text-indigo-600 hover:text-indigo-800" %>.</p>
      </div>

      <div class="flex justify-end space-x-2">
        <%= link_to "Cancel", profile_path, class: "bg-gray-200 text-gray-700 px-4 py-2 rounded hover:bg-gray-300" %>
        <%= form.submit "Update Profile", class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
      </div>
    <% end %>
  </div>
</div> 