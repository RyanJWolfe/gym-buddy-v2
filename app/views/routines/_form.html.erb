<%= form_with model: @routine, html: {
  class: "flex flex-col gap-y-4 pb-24", # add bottom padding so content isn't hidden
  data: { controller: "nested-exercise-select-form", nested_exercise_select_form_wrapper_selector_value: ".nested-exercise-form-wrapper" }
} do |f| %>
  <% if @routine.errors.any? %>
    <div class="mb-4 p-4 border border-red-500 bg-red-100 rounded">
      <h2 class="text-red-700 font-semibold mb-2">Please fix the following errors:</h2>
      <ul class="list-disc list-inside text-red-700">
        <% @routine.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div data-controller="clearable-input" class="relative">
    <%= f.text_field :name, placeholder: "Routine title", class: "form-input-borderless font-medium pr-8", data: { clearable_input_target: "input", action: "input->clearable-input#changed" } %>
    <button type="button" aria-label="Clear name" title="Clear" data-action="click->clearable-input#clear" data-clearable-input-target="clearButton" class="absolute inset-y-0 right-2 flex items-center text-muted hover:text-gray-700 opacity-0 pointer-events-none scale-50 transition duration-150 ease-in-out" aria-hidden="true">
      <%= inline_svg_tag "icons/x-circle.svg", class: "w-4 h-4" %>
    </button>
  </div>

  <template data-nested-exercise-select-form-target="template">
    <% new_re = RoutineExercise.new %>
    <% new_re.routine_sets.build %>
    <%= f.fields_for :routine_exercises, new_re, child_index: "NEW_RECORD" do |re_fields| %>
      <%= render "routines/routine_exercise_form", f: re_fields %>
    <% end %>
  </template>

  <% if @routine.routine_exercises.any? %>
    <%= f.fields_for :routine_exercises do |re_fields| %>
      <%= render "routines/routine_exercise_form", f: re_fields %>
    <% end %>
  <% end %>

  <div data-nested-exercise-select-form-target="target" class="hidden"></div>

  <div id="exercises-empty-state" data-nested-exercise-select-form-target="emptyStateContainer" class="<%= "hidden" unless @routine.routine_exercises.empty? %>">
    <div class="flex flex-col items-center justify-center text-center text-muted font-normal pt-12 pb-6">
      <%= inline_svg_tag "icons/watch.svg", class: "w-10 h-10 mb-3" %>
      <div class="text-base">Add an exercise to your routine to get started.</div>
    </div>
  </div>

  <%= link_to "Add Exercise", routine_exercise_select_modal_path, data: { turbo_method: :post }, class: "btn btn-primary" %>

  <%# for displaying exercise selector %>
  <%= turbo_frame_tag "modal" %>

  <div class="fixed bottom-0 left-0 w-full bg-white border-t border-gray-200 shadow-lg flex justify-between md:justify-end md:gap-x-5 items-center px-4 py-3 md:pr-32 z-50">
    <%= link_to "Cancel", new_workout_path, class: "link link-primary w-full md:w-fit text-center" %>
    <%= f.submit 'Save', class: "btn btn-primary w-full md:px-6 md:w-fit" %>
  </div>
<% end %>