<% content_for :title, @routine.name %>

<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <div class="flex items-center gap-x-1">
      <%= render "shared/buttons/back_button", path: path_to_previous_page == edit_routine_url(@routine) ? new_workout_path : path_to_previous_page %>
      <h1 class="text-2xl font-extramedium"><%= @routine.name %></h1>
    </div>
    <div class="flex space-x-4">
      <%= link_to "Edit", edit_routine_path(@routine), class: "btn btn-tertiary" %>
      <%= button_to "Start Workout", root_path, method: :post, class: "btn btn-primary" %>
    </div>
  </div>

  <h2 class="text-lg font-extramedium mb-3">Notes</h2>
  <div class="bg-surface-secondary rounded-2xl shadow p-6 mb-4">
    <div class="prose max-w-none">
      <p><%= simple_format @routine.description || "no notes" %></p>
    </div>
  </div>

  <h2 class="text-lg font-extramedium mb-3">Exercises (<%= @routine_exercises.count %>)</h2>
  <div class="bg-surface-secondary rounded-2xl shadow overflow-hidden">
    <% if @routine_exercises.any? %>
      <div class="divide-y divide-surface-border">
        <% @routine_exercises.each do |routine_exercise| %>
          <div class="px-6 py-4">
            <div class="flex flex-col md:flex-row md:justify-between md:items-center">
              <div class="flex-1">
                <h3 class="font-medium"><%= routine_exercise.exercise.name %></h3>
                <div class="text-sm text-muted mt-1">
                  <%= routine_exercise.exercise.primary_category.name %>
                  • <%= routine_exercise.exercise.equipment_type %>
                </div>
              </div>
              <div class="flex items-center mt-3 md:mt-0">
                <span class="px-3 py-1 bg-body rounded-lg text-muted-light text-sm">
                  <%= pluralize(routine_exercise.suggested_sets, 'set') %> × <%= routine_exercise.suggested_reps %> reps
                </span>
                <% if routine_exercise.rest_seconds.present? %>
                  <span class="ml-3 px-3 py-1 bg-body rounded-lg text-muted-light text-sm">
                    <%= routine_exercise.rest_seconds %>s rest
                  </span>
                <% end %>
              </div>
            </div>

            <% if routine_exercise.notes.present? %>
              <div class="mt-3 text-sm text-gray-600">
                <%= simple_format routine_exercise.notes %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-6 text-center text-muted">
        No exercises in this routine yet.
        <%= link_to "Edit routine", edit_routine_path(@routine), class: "text-indigo-600" %> to add exercises.
      </div>
    <% end %>
  </div>
</div>
