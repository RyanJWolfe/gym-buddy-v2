<div class="max-w-lg mx-auto w-full">
  <div class="card">
    <div class="mb-8 text-center">
      <span class="text-4xl">ğŸ˜¶â€ğŸŒ«ï¸</span>
      <h1 class="text-3xl font-bold mt-2">Forgot you password?</h1>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-6">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <div>
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <div class="flex items-center my-6">
      <hr class="flex-1 border-gray-200"/>
      <span class="text-base font-medium px-3 whitespace-nowrap">All set?</span>
      <hr class="flex-1 border-gray-200"/>
    </div>

    <div class="mt-6 text-center flex gap-x-4 items-center">
      <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-tertiary w-full" %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-secondary w-full text-center" %>

    </div>
  </div>
</div>
