<%# Header section %>
<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-4">
  <div>
    <h1 class="text-2xl font-bold text-gray-900"><%= workout.name %></h1>
    <p class="text-gray-600"><%= workout.date.strftime("%B %d, %Y") %></p>
  </div>
  <div class="flex gap-2 w-full sm:w-auto">
    <%= link_to edit_workout_path(workout), class: "flex-1 sm:flex-none text-center bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition-colors" do %>
      <span>Edit Workout</span>
    <% end %>
    <%= link_to workouts_path, class: "flex-1 sm:flex-none text-center bg-gray-100 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-200 transition-colors" do %>
      <span>Back</span>
    <% end %>
  </div>
</div> 