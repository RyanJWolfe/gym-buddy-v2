<div class="bg-white rounded-lg shadow p-4 hover:shadow-md transition">
  <div class="flex justify-between items-start mb-2">
    <div class="flex flex-col">
      <h3 class="font-medium text-lg text-indigo-600">
        <%= link_to workout.name, workout_path(workout) %>
        <%= render_sequence_number(workout, font_size: "text-sm") %>
      </h3>
      <span class="text-sm text-gray-500"><%= workout.date.strftime("%b %d, %Y") %></span>
    </div>
    <div class="dropdown relative" data-controller="dropdown">
      <button data-action="click->dropdown#toggle" class="p-1 hover:bg-body rounded-lg">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z" />
        </svg>
      </button>
      <div data-dropdown-target="menu" class="hidden absolute right-0 mt-1 w-36 bg-white rounded-md shadow-lg z-10">
        <div class="py-1">
          <%= link_to "View", workout_path(workout), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-body" %>
          <%= link_to "Edit", edit_workout_path(workout), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-body" %>
          <%= button_to "Delete", workout_path(workout), method: :delete, class: "w-full text-left block px-4 py-2 text-sm text-red-600 hover:bg-body", form: { data: { turbo_confirm: "Are you sure?" } } %>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-3 grid grid-cols-3 gap-2 text-center text-sm">
    <div class="bg-gray-50 p-2 rounded">
      <p class="font-medium"><%= workout.total_exercises %></p>
      <p class="text-gray-500 text-xs">Exercises</p>
    </div>
    <div class="bg-gray-50 p-2 rounded">
      <p class="font-medium"><%= workout.total_sets %></p>
      <p class="text-gray-500 text-xs">Sets</p>
    </div>
    <div class="bg-gray-50 p-2 rounded">
      <p class="font-medium"><%= format_duration(workout.duration_minutes) %></p>
      <p class="text-gray-500 text-xs">Duration</p>
    </div>
  </div>
</div>