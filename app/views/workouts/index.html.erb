<% content_for :title, "Workouts" %>

<div class="max-w-2xl mx-auto mb-6">
  <div class="flex justify-between items-center mb-4">
    <div class="flex items-center gap-x-1">
      <%= render "shared/buttons/back_button" %>
      <h1 class="text-2xl font-extramedium">Your Workouts</h1>
    </div>
    <div class="flex space-x-2 hidden">
      <div class="relative" data-controller="dropdown">
        <button data-action="click->dropdown#toggle" class="btn btn-tertiary flex items-center">
          <span>Export</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>
        <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-10">
          <div class="py-1">
            <%= link_to "Export as CSV", exports_workouts_path(format: :csv), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-body" %>
            <%= link_to "Export as JSON", exports_workouts_path(format: :json), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-body" %>
          </div>
        </div>
      </div>
      <%= link_to "New Workout", workout_start_path, class: "btn btn-primary" %>
    </div>
  </div>

  <%# Segmented toggle: List (default) / Calendar - controlled by Stimulus to load into turbo frame and update URL %>
  <% list_toggle_class = "px-3 py-1 rounded-md text-sm font-medium " + (params[:view] == 'calendar' ? 'text-gray-600' : 'bg-white shadow') %>
  <% calendar_toggle_class = "px-3 py-1 rounded-md text-sm font-medium " + (params[:view] == 'calendar' ? 'bg-white shadow' : 'text-gray-600') %>

  <div class="mb-4" data-controller="workouts-toggle">
    <div class="inline-flex rounded-md bg-body p-1">
      <%# List view link - default (no view param) %>
      <%= link_to(workouts_path, { data: { action: "click->workouts-toggle#switch", turbo_frame: "workouts_view" }, class: list_toggle_class }) do %>
        <span>List</span>
      <% end %>

      <%# Calendar view link - sets ?view=calendar %>
      <%= link_to(workouts_path(view: 'calendar'), { data: { action: "click->workouts-toggle#switch", turbo_frame: "workouts_view" }, class: calendar_toggle_class }) do %>
        <span>Calendar</span>
      <% end %>
    </div>
  </div>

  <%# Turbo frame - this will be swapped when the toggle links are clicked. Server will render either the list or the calendar partial based on params[:view] %>
  <%= turbo_frame_tag "workouts_view" do %>
    <% if params[:view] == 'calendar' %>
      <%= render partial: 'workouts/calendar', locals: { workouts: @workouts } %>
    <% else %>
      <% if @workouts.any? %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 lg:hidden">
          <%= render partial: 'workouts/workout_card', collection: @workouts, as: :workout %>
        </div>

        <div class="hidden lg:block rounded-lg shadow overflow-hidden">
          <%= render 'workouts/table' %>
        </div>
      <% else %>
        <%= render 'workouts/empty_state' %>
      <% end %>
    <% end %>
  <% end %>
</div>
