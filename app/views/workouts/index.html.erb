<% content_for :title, "Workouts" %>

<div class="max-w-2xl mx-auto mb-6">
  <div class="flex justify-between items-center mb-4">
    <div class="flex items-center gap-x-1">
      <%= render "shared/buttons/back_button" %>
      <h1 class="text-2xl font-extramedium">Your Workouts</h1>
    </div>
    <div class="flex space-x-2 hidden">
      <div class="relative" data-controller="dropdown">
        <button data-action="click->dropdown#toggle" class="btn btn-tertiary flex items-center">
          <span>Export</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>
        <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-10">
          <div class="py-1">
            <%= link_to "Export as CSV", exports_workouts_path(format: :csv), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-body" %>
            <%= link_to "Export as JSON", exports_workouts_path(format: :json), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-body" %>
          </div>
        </div>
      </div>
      <%= link_to "New Workout", workout_start_path, class: "btn btn-primary" %>
    </div>
  </div>

  <%# Segmented toggle: List (default) / Calendar - controlled by Stimulus to load into turbo frame and update URL %>
  <% list_active = params[:view].blank? || params[:view] != 'calendar' %>
  <% calendar_active = params[:view] == 'calendar' %>

  <% base_classes = "px-4 py-1 rounded-full text-sm font-medium transition-colors focus:outline-none relative z-10" %>
  <% active_text = "text-primary" %>
  <% inactive_text = "text-gray-600" %>

  <div class="mb-4 flex justify-center" data-controller="workouts-toggle">
    <div data-workouts-toggle-target="container" class="relative inline-flex rounded-full bg-body p-1 border border-gray-200">
      <%# Sliding indicator positioned under active button; positioned by Stimulus %>
      <div data-workouts-toggle-target="slider" class="absolute top-1 bottom-1 left-0 rounded-full bg-primary-light shadow-sm transition-all duration-200" style="width:0; transform: translateX(0);"></div>

      <%# List view link - default (no view param) %>
      <%= link_to(workouts_path, { class: "#{base_classes} #{list_active ? active_text : inactive_text}", data: { action: "click->workouts-toggle#switch", turbo_frame: "workouts_view", turbo_action: "advance", "workouts-toggle-target": "list" }, role: "tab", "aria-pressed": (list_active ? 'true' : 'false') }) do %>
        <span>List</span>
      <% end %>

      <%# Calendar view link - sets ?view=calendar %>
      <%= link_to(workouts_path(view: 'calendar'), { class: "#{base_classes} #{calendar_active ? active_text : inactive_text}", data: { action: "click->workouts-toggle#switch", turbo_frame: "workouts_view", turbo_action: "advance", "workouts-toggle-target": "calendar" }, role: "tab", "aria-pressed": (calendar_active ? 'true' : 'false') }) do %>
        <span>Calendar</span>
      <% end %>
    </div>
  </div>

  <%# Turbo frame - this will be swapped when the toggle links are clicked. Server will render either the list or the calendar partial based on params[:view] %>
  <%= turbo_frame_tag "workouts_view", class: "transition-opacity duration-200" do %>
    <% if params[:view] == 'calendar' %>
      <%= render partial: 'workouts/calendar', locals: { workouts: @workouts } %>
    <% else %>
      <% if @workouts.any? %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 lg:hidden">
          <%= render partial: 'workouts/workout_card', collection: @workouts, as: :workout %>
        </div>

        <div class="hidden lg:block rounded-lg shadow overflow-hidden">
          <%= render 'workouts/table' %>
        </div>
      <% else %>
        <%= render 'workouts/empty_state' %>
      <% end %>
    <% end %>
  <% end %>
</div>
