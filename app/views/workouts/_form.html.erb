<%= form_with model: workout, html: {
  class: "flex flex-col gap-y-4 pb-24", # add bottom padding so content isn't hidden
  data: { controller: "nested-exercise-select-form", nested_exercise_select_form_wrapper_selector_value: ".nested-exercise-form-wrapper" }
} do |f| %>
  <% if workout.errors.any? %>
    <div class="bg-red-50 text-red-700 p-4 rounded mb-4">
      <h2 class="font-bold mb-2"><%= pluralize(workout.errors.count, "error") %> prohibited this workout from being
        saved:</h2>
      <ul class="list-disc pl-5">
        <% workout.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <template data-nested-exercise-select-form-target="template">
    <% new_exercise = ExerciseLog.new %>
    <% new_exercise.sets.build %>
    <%= f.fields_for :exercise_logs, new_exercise, child_index: "NEW_RECORD" do |re_fields| %>
      <%= render "routines/routine_exercise_form", f: re_fields %>
    <% end %>
  </template>

  <% if workout.exercise_logs.any? %>
    <%= f.fields_for :exercise_logs do |exercise_fields| %>
      <%= render "routines/routine_exercise_form", f: exercise_fields %>
    <% end %>
  <% end %>

  <div data-nested-exercise-select-form-target="target" class="hidden"></div>

  <div id="exercises-empty-state" data-nested-exercise-select-form-target="emptyStateContainer" class="<%= "hidden" unless workout.exercise_logs.empty? %>">
    <div class="flex flex-col items-center justify-center text-center text-muted font-normal pt-12 pb-6">
      <%= inline_svg_tag "pictograms/yoga-ball.svg", class: "w-24 h-24 mb-3 fill-current" %>
      <div class="text-base">Add an exercise to your workout to get started.</div>
    </div>
  </div>

  <%= link_to "Add Exercise", routine_exercise_select_modal_path, data: { turbo_method: :post }, class: "btn btn-primary" %>

  <%# for displaying exercise selector %>
  <%= turbo_frame_tag "modal" %>
<% end %>
