<%= form_with(model: workout, class: "flex flex-col gap-y-4") do |form| %>
  <% if workout.errors.any? %>
    <div class="bg-red-50 text-red-700 p-4 rounded mb-4">
      <h2 class="font-bold mb-2"><%= pluralize(workout.errors.count, "error") %> prohibited this workout from being
        saved:</h2>
      <ul class="list-disc pl-5">
        <% workout.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div>
    <%= form.label :start_time, class: "form-label" %>
    <%= form.datetime_field :start_time, class: "form-input" %>
  </div>

  <div>
    <%= form.label :end_time, class: "form-label" %>
    <%= form.datetime_field :end_time, class: "form-input" %>
  </div>

  <div>
    <%= form.label :notes, class: "form-label" %>
    <%= form.text_area :notes, rows: 4, class: "form-input" %>
  </div>

  <div class="flex justify-end space-x-2">
    <%= link_to "Cancel", workout.new_record? ? workouts_path : workout_path(workout), class: "btn btn-tertiary" %>
    <%= form.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>
