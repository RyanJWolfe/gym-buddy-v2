<% content_for :title, "Editing workout" %>

<div class="max-w-4xl mx-auto px-4 py-6">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Workout Details Form %>
    <div class="lg:col-span-1">
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold mb-4">Workout Details</h2>
        <%= render "form", workout: @workout %>
      </div>
    </div>

    <%# Exercise Logging Section %>
    <div class="lg:col-span-2">
      <div class="col-span-2 bg-white rounded-lg shadow p-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-semibold">Exercise Log</h2>
          <%= link_to "Add Exercise", new_workout_exercise_log_path(@workout),
                      data: { turbo_frame: "modal", turbo_stream: true },
                      class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>

        <div id="exercise-logs">
          <% if @exercise_logs.any? %>
            <% @exercise_logs.each do |log| %>
              <%= render log %>
            <% end %>
          <% else %>
            <p class="text-gray-500 text-center py-4">
              No exercises added yet.
              <%= link_to "Add your first exercise", new_workout_exercise_log_path(@workout),
                          data: { turbo_frame: "modal", turbo_stream: true },
                          class: "text-indigo-600 hover:text-indigo-800" %>
            </p>
          <% end %>
        </div>


      </div>
      <div class="mt-4 text-center">
        <%= link_to "View Complete Workout Summary", workout_path(@workout), class: "text-indigo-600 hover:text-indigo-800" %>
      </div>
    </div>
  </div>
</div>

<%# Modal container %>
<%= turbo_frame_tag "modal" %>
