<%# locals: (routine:) %>

<div id="<%= dom_id(routine) %>" class="bg-gray-200 rounded-lg shadow p-4 hover:shadow-md transition">
  <div class="flex items-center justify-between">
    <h3 class="font-semibold"><%= routine.name %></h3>

    <%= render "shared/bottom_sheet", title: routine.name do %>
      <div class="space-y-2">
        <div data-controller="share">
          <button type="button"
                  data-action="click->bottom-sheet#close click->share#shareRoutine"
                  class="w-full flex items-center gap-x-3 p-3 rounded-lg hover:bg-gray-100">
            <%= inline_svg_tag "icons/share.svg", class: "h-6 w-6" %>
            <span class="font-medium">Share Routine</span>
          </button>
          <div class="hidden" data-share-target="shareText" data-share-value="<%= routine.share_text %>"></div>
        </div>
        <%= link_to duplicate_workout_path(routine), class: "flex items-center gap-x-3 p-3 rounded-lg hover:bg-gray-100" do %>
          <%= inline_svg_tag "icons/copy.svg", class: "h-6 w-6" %>
          <span class="font-medium">Duplicate Routine</span>
        <% end %>
        <%= link_to edit_routine_path(routine), class: "flex items-center gap-x-3 p-3 rounded-lg hover:bg-gray-100" do %>
          <%= inline_svg_tag "icons/edit.svg", class: "h-6 w-6" %>
          <span class="font-medium">Edit Routine</span>
        <% end %>
        <%= render "delete_routine_dialog", routine: %>
      </div>
    <% end %>
  </div>
  <div class="text-gray-700 text-xs text-ellipsis line-clamp-2">
    <%= routine.exercises.map(&:name).join(", ") %>
  </div>


  <%= button_to workouts_path, method: :post, params: { routine_id: routine.id }, class: "mt-2 btn btn-primary btn-icon w-full" do %>
    <span>Start Routine</span>
  <% end %>


</div>