<!-- app/views/workouts/previous.html.erb -->
<div class="max-w-4xl mx-auto p-4 sm:p-6 bg-gray-50">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold">Select a Previous Workout</h1>
    <%= link_to "← Back", new_workout_path, class: "text-gray-600 hover:text-gray-900" %>
  </div>

  <div class="grid gap-4">
    <% @workouts.each do |workout| %>
      <div class="relative group">
        <!-- For md screens and below: entire card is clickable -->
        <%= link_to duplicate_workout_path(workout), method: :post, class: "md:hidden block bg-white border border-gray-200 p-4 rounded-lg hover:bg-blue-50 active:bg-blue-100 shadow-sm hover:shadow transition-all duration-200" do %>
          <div class="flex flex-col">
            <h3 class="font-bold text-gray-800 text-center mb-2"><%= workout.name %></h3>

            <div class="grid grid-cols-2 gap-2 mb-3">
              <div class="bg-gray-50 p-2 rounded text-center">
                <span class="block text-xs text-gray-500">Date</span>
                <span class="font-medium text-gray-700"><%= workout.date.strftime("%b %d, %Y") %></span>
              </div>

              <div class="bg-gray-50 p-2 rounded text-center">
                <span class="block text-xs text-gray-500">Exercises</span>
                <span class="font-medium text-gray-700"><%= workout.exercise_logs.count %></span>
              </div>
            </div>

            <div class="mt-2 text-center text-blue-600 flex items-center justify-center border-t border-gray-100 pt-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13a1 1 0 102 0V9.414l1.293 1.293a1 1 0 001.414-1.414z" clip-rule="evenodd" />
              </svg>
              <span class="font-medium">Use as Template</span>
            </div>
          </div>
        <% end %>

        <!-- For md screens and above: card with separate button -->
        <div class="hidden md:block bg-white border border-gray-200 p-4 rounded-lg shadow-sm">
          <div class="flex justify-between items-center">
            <div>
              <h3 class="font-bold text-gray-800"><%= workout.name %></h3>
              <p class="text-sm text-gray-600"><%= workout.date.strftime("%b %d, %Y") %></p>
              <p class="text-sm text-gray-700"><%= pluralize(workout.exercise_logs.count, 'exercise') %></p>
            </div>
            <%= button_to duplicate_workout_path(workout),
                          class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-md transition-colors duration-200" do %>
              Use as Template
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>