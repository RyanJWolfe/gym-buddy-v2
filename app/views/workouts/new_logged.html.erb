<div class="max-w-2xl mx-auto mt-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold">Log Past Workout</h1>
    <%= link_to "← Back", new_workout_path, class: "text-gray-600 hover:text-gray-900" %>
  </div>

  <%= form_with(model: @workout, class: "bg-white rounded-lg shadow-sm p-6 space-y-4") do |form| %>
    <%= hidden_field_tag :type, 'logged' %>
    
    <% if @workout.errors.any? %>
      <div class="bg-red-50 text-red-700 p-4 rounded mb-4">
        <h2 class="font-bold mb-2"><%= pluralize(@workout.errors.count, "error") %> prohibited this workout from being saved:</h2>
        <ul class="list-disc pl-5">
          <% @workout.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-input",
          placeholder: "e.g., Morning Strength Training" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= form.label :start_time, class: "form-label" %>
        <%= form.datetime_local_field :start_time, class: "form-input" %>
      </div>

      <div>
        <%= form.label :end_time, class: "form-label" %>
        <%= form.datetime_local_field :end_time, class: "form-input" %>
      </div>
    </div>

    <div>
      <%= form.label :notes, class: "form-label" %>
      <%= form.text_area :notes, rows: 3, class: "form-input",
          placeholder: "Optional notes about your workout" %>
    </div>

    <div class="flex justify-end space-x-2 pt-4">
      <%= link_to "Cancel", new_workout_path, class: "btn btn-tertiary" %>
      <%= form.submit "Continue to Exercises", class: "btn btn-primary" %>
    </div>
  <% end %>
</div> 