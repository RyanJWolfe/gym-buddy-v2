<%# Stats cards %>
<div class="grid grid-cols-2 sm:grid-cols-3 gap-4 mb-6">
  <div class="bg-white rounded-xl shadow p-4">
    <p class="text-sm text-gray-600 mb-1">Total Volume</p>
    <p class="text-xl font-bold text-indigo-600"><%= number_with_delimiter(format_weight(workout.total_volume)) %> kg</p>
  </div>
  <div class="bg-white rounded-xl shadow p-4">
    <p class="text-sm text-gray-600 mb-1">Duration</p>
    <p class="text-xl font-bold text-indigo-600"><%= workout.duration_minutes ? "#{workout.duration_minutes} min" : "N/A" %></p>
  </div>
  <div class="bg-white rounded-xl shadow p-4 col-span-2 sm:col-span-1">
    <p class="text-sm text-gray-600 mb-1">Exercises</p>
    <p class="text-xl font-bold text-indigo-600"><%= exercise_logs.count %></p>
  </div>
</div> 