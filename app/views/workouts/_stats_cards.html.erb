<%# Stats cards %>
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
  <div class="bg-white rounded-2xl shadow-sm p-6">
    <p class="text-base text-gray-600 mb-2">Total Volume</p>
    <p class="text-2xl font-semibold text-indigo-600"><%= number_with_delimiter(format_weight(workout.total_volume)) %> kg</p>
  </div>

  <div class="bg-white rounded-2xl shadow-sm p-6">
    <p class="text-base text-gray-600 mb-2">Duration</p>
    <p class="text-2xl font-semibold text-indigo-600"><%= format_duration(workout.duration_minutes) %></p>
  </div>

  <div class="bg-white rounded-2xl shadow-sm p-6">
    <div class="flex items-center gap-2 mb-2">
      <%= inline_svg_tag "icons/clock.svg", class: "h-4 w-4 text-gray-400" %>
      <p class="text-base text-gray-600">Time</p>
    </div>
    <% if workout.start_time && workout.end_time %>
      <p class="text-2xl font-semibold text-indigo-600"><%= format_time(workout.start_time) %></p>
      <p class="text-sm text-gray-500 mt-1">to</p>
      <p class="text-2xl font-semibold text-indigo-600 mt-1"><%= format_time(workout.end_time) %></p>
    <% else %>
      <p class="text-base text-gray-500">Time not set</p>
    <% end %>
  </div>

  <div class="bg-white rounded-2xl shadow-sm p-6">
    <p class="text-base text-gray-600 mb-2">Exercises</p>
    <p class="text-2xl font-semibold text-indigo-600"><%= exercise_logs.count %></p>
  </div>
</div> 