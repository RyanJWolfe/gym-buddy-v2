<%# Stats cards %>
<div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-3 gap-2 sm:gap-4 mb-6">
  <div class="bg-white rounded-xl shadow-sm p-3 sm:p-6">
    <p class="text-sm sm:text-base text-gray-600 mb-1 sm:mb-2">Total Volume</p>
    <p class="text-lg sm:text-2xl font-semibold text-indigo-600"><%= number_with_delimiter(format_weight(workout.total_volume)) %> kg</p>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-3 sm:p-6">
    <p class="text-sm sm:text-base text-gray-600 mb-1 sm:mb-2">Duration</p>
    <p class="text-lg sm:text-2xl font-semibold text-indigo-600"><%= format_duration(workout.duration_minutes) %></p>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-3 sm:p-6">
    <p class="text-sm sm:text-base text-gray-600 mb-1 sm:mb-2">Time</p>
    <% if workout.start_time && workout.end_time %>
      <div class="flex items-center gap-1 sm:gap-2">
        <p class="text-sm sm:text-2xl font-semibold text-indigo-600"><%= format_time(workout.start_time) %></p>
        <p class="text-xs sm:text-sm text-gray-500">to</p>
        <p class="text-sm sm:text-2xl font-semibold text-indigo-600"><%= format_time(workout.end_time) %></p>
      </div>
    <% else %>
      <p class="text-sm sm:text-base text-gray-500">Time not set</p>
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-3 sm:p-6">
    <p class="text-sm sm:text-base text-gray-600 mb-1 sm:mb-2">Exercises</p>
    <p class="text-lg sm:text-2xl font-semibold text-indigo-600"><%= exercise_logs.size %></p>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-3 sm:p-6">
    <p class="text-sm sm:text-base text-gray-600 mb-1 sm:mb-2">Sets</p>
    <p class="text-lg sm:text-2xl font-semibold text-indigo-600"><%= exercise_logs.map(&:total_sets).sum %></p>
  </div>
</div> 