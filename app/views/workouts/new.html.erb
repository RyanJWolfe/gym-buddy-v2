<% content_for :title, "New workout" %>

<% if true %>
  <div class="flex flex-col gap-y-4">
    <h3 class="font-semibold text-xl">Quick Start</h3>
    <%= button_to workouts_path, method: :get, class: "btn btn-icon btn-tertiary w-full" do %>
      <%= inline_svg_tag "icons/plus.svg", class: "h-4 w-4" %>
      <span>Start Empty Workout</span>
    <% end %>

    <h3 class="font-semibold text-xl">Programs & Routines</h3>
    <div class="grid grid-cols-2 items-center gap-x-4">

      <%= link_to root_path, class: "btn btn-icon btn-tertiary flex-1" do %>
        <%= inline_svg_tag "icons/book.svg", class: "h-4 w-4" %>
        <span>New Program</span>
      <% end %>
      <%= button_to routines_path, method: :post, form_class: "flex-1", class: 'w-full btn btn-tertiary btn-icon' do %>
        <%= inline_svg_tag "icons/clipboard.svg", class: "h-4 w-4" %>
        <span>New Routine</span>
      <% end %>
    </div>

    <h3 class="font-semibold text-xl"> General Routines (<%= current_user.routines.size %>)</h3>

  </div>
<% else %>
  <div class="max-w-2xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <%= link_to new_workout_path(type: 'logged'),
                  class: "flex flex-col items-center p-8 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200" do %>
        <div class="h-12 w-12 bg-indigo-100 rounded-full flex items-center justify-center mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h2 class="text-xl font-semibold mb-2">Log Completed Workout</h2>
        <p class="text-gray-600 text-center">Record details of a workout you've already finished</p>
      <% end %>

      <%= link_to new_workout_path(type: 'duplicate'),
                  class: "flex flex-col items-center p-8 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200" do %>
        <div class="h-12 w-12 bg-amber-100 rounded-full flex items-center justify-center mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <polyline points="23 4 23 10 17 10"></polyline>
            <polyline points="1 20 1 14 7 14"></polyline>
            <path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"></path>
          </svg>
        </div>
        <h2 class="text-xl font-semibold mb-2">Use Previous Workout</h2>
        <p class="text-gray-600 text-center">Start with exercises from a past workout</p>
      <% end %>

      <%= link_to new_workout_path(type: 'realtime'),
                  class: "flex flex-col items-center p-8 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200" do %>
        <div class="h-12 w-12 bg-green-100 rounded-full flex items-center justify-center mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h2 class="text-xl font-semibold mb-2">Start Fresh Workout</h2>
        <p class="text-gray-600 text-center">Create a new workout from scratch</p>
      <% end %>
    </div>
  </div>
<% end %>
