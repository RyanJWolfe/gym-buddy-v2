<% content_for :title, "New workout" %>

<div class="max-w-2xl mx-auto mt-8 p-6">
  <h1 class="text-2xl font-bold text-center mb-8">Create Workout</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <%= link_to new_logged_workouts_path, 
        class: "flex flex-col items-center p-8 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200" do %>
      <div class="h-12 w-12 bg-indigo-100 rounded-full flex items-center justify-center mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <h2 class="text-xl font-semibold mb-2">Log Past Workout</h2>
      <p class="text-gray-600 text-center">Record a workout you've already completed</p>
    <% end %>

    <%= link_to new_realtime_workouts_path,
        class: "flex flex-col items-center p-8 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200" do %>
      <div class="h-12 w-12 bg-green-100 rounded-full flex items-center justify-center mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <h2 class="text-xl font-semibold mb-2">Start New Workout</h2>
      <p class="text-gray-600 text-center">Track your workout in real-time</p>
    <% end %>
  </div>
</div>
