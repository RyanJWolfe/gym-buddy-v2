<div class="flex flex-col gap-y-4 pt-4"
     data-controller="workout-form"
     data-workout-form-workout-id-value="<%= workout.id %>"
     data-action="exercise:add->workout-form#addExercises exercise:replace->workout-form#replaceExercise">
  <div id="<%= dom_id(workout, :exercise_logs) %>" class="flex flex-col gap-y-4">
    <% if workout.exercise_logs.any? %>
      <%= render partial: "workouts/exercise_log_form", collection: workout.exercise_logs, as: :exercise_log %>
    <% else %>
      <%= render "workouts/exercise_empty_state" %>
    <% end %>
  </div>

  <%= link_to "Add Exercise", routine_exercise_select_modal_path, data: { turbo_method: :post }, class: "btn btn-primary" %>

  <%# for displaying exercise selector %>
  <%= turbo_frame_tag "modal" %>
</div>