<% if show_active_workout_indicator? %>
  <div class="hidden lg:flex items-center space-x-3 ml-4" role="status" aria-label="Active workout in progress">
    <div class="bg-yellow-50 text-yellow-800 px-3 py-1 rounded-md text-sm font-medium">
      Workout in Progress
    </div>

    <div class="flex items-center space-x-2">
      <%= link_to "Resume", edit_workout_path(current_user_active_workout),
                  class: "text-sm px-3 py-1 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>

      <%= button_to "Discard", workout_path(current_user_active_workout), method: :delete,
                    form: { data: { turbo_confirm: "Discard this workout?" } },
                    class: "text-sm px-3 py-1 bg-gray-100 text-gray-800 rounded-md hover:bg-gray-200" %>
    </div>
  </div>
<% end %>
