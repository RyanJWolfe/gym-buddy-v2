<%# locals: ( workout: ) %>

<div id="<%= dom_id(workout, :active_workout_indicator) %>"
     class="fixed inset-x-0 md:inset-x-4 bottom-14 md:bottom-6 z-50"
     role="region"
     aria-label="Active workout in progress">

  <!-- Mobile: bottom-centered pill -->
  <div class="w-screen lg:hidden">
    <div class="shadow-top bg-bottom-nav rounded-t-2xl px-4 pt-4 pb-4 md:p-4 md:rounded-2xl md:max-w-sm md:mx-auto">
      <div class="flex flex-col gap-1 items-center">
        <div class="flex items-center justify-center flex-wrap gap-x-3">
          <h5 class="text-muted text-sm font-medium truncate">Workout in Progress</h5>
          <%= render "layouts/active_workout_indicator/timer", workout: workout, show_label: true %>
        </div>

        <%= render "layouts/active_workout_indicator/actions", workout: workout %>
      </div>
    </div>
  </div>

  <!-- Desktop: right-side rail -->
  <div class="hidden lg:block">
    <div class="max-w-lg mx-auto bg-bottom-nav shadow-md rounded-full p-2 ring-1 ring-primary/20">
      <div class="flex items-center gap-3">
        <%= render "layouts/active_workout_indicator/icon_title", workout: workout, show_title: true %>

        <div class="ml-auto flex flex-col items-center px-2">
          <%= render "layouts/active_workout_indicator/timer", workout: workout, show_label: true %>
          <%= render "layouts/active_workout_indicator/actions", workout: workout %>
        </div>
      </div>
    </div>
  </div>

</div>

