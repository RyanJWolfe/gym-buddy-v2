<%= form_with(model: exercise, class: "space-y-4") do |form| %>
  <% if exercise.errors.any? %>
    <div class="bg-red-50 text-red-700 p-4 rounded mb-4">
      <h2 class="font-bold mb-2"><%= pluralize(exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>
      <ul class="list-disc pl-5">
        <% exercise.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
  </div>

  <div>
    <%= form.label :category, class: "form-label" %>
    <%= form.select :category, 
                   ["Legs", "Push", "Pull", "Core", "Cardio", "Full Body", "Other"],
                   { include_blank: "Select a category" },
                   { class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" } %>
  </div>

  <div>
    <%= form.label :equipment_type, class: "form-label" %>
    <%= form.select :equipment_type, 
                   ["Barbell", "Dumbbell", "Machine", "Cable", "Bodyweight", "Kettlebell", "Resistance Band", "Other"],
                   { include_blank: "Select equipment type" },
                   { class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" } %>
  </div>

  <div>
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, rows: 4, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    <div class="form-muted-label">Optional: describe how to perform this exercise</div>
  </div>

  <div class="flex justify-end space-x-2">
    <%= link_to "Cancel", exercises_path, class: "btn btn-tertiary" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %> 