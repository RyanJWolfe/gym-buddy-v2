<%= form_with url: exercises_path, method: :get, data: { controller: "search", search_target: "form", search_update_url_value: false, turbo_stream: true }, class: "relative w-full " do |f| %>
  <div class="flex gap-2 relative">
    <%= inline_svg("icons/search.svg", class: "absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400 z-50") %>
    <%= render 'shared/clearable_input' do %>
      <%= f.text_field :search,
                       value: params[:search],
                       placeholder: "Search exercises...",
                       autocomplete: :off,
                       data: { action: "input->search#onInput input->clearable-input#changed", search_target: "input", clearable_input_target: "input" },
                       class: "form-input pl-9 md:pl-10" %>
    <% end %>
  </div>

  <div class="relative">
    <div data-search-target="filters" class="w-full transition-all duration-150 ease-in-out">
      <div class="grid grid-cols-2 gap-x-4 pt-4">
        <%= render 'exercises/equipment_filter', f: %>
        <%= render 'exercises/category_filter', f: %>
      </div>
    </div>
    <button type="button" aria-label="Clear name" title="Clear" data-action="click->search#clearFilters" data-search-target="clearFiltersButton" class="absolute top-1/2 transform right-5 flex items-center text-muted hover:text-gray-700 opacity-0 pointer-events-none scale-50 transition duration-150 ease-in-out" aria-hidden="true">
      <%= inline_svg_tag "icons/x-circle.svg", class: "w-4 h-4" %>
    </button>
  </div>
<% end %>
