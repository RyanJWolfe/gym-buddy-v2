<div id="exercise-select-mobile-header" class="z-50 shadow-md bg-gray-100 sticky top-0 w-full">
  <div class="max-w-2xl lg:max-w-4xl mx-auto flex items-center justify-between p-4">
    <button type="button" class="link link-primary" data-action="modal#close">
      Cancel
    </button>
    <h2 class="text-lg lg:text-2xl font-semibold">Select an Exercise</h2>
    <button type="submit" class="link link-primary pointer-events-none cursor-not-allowed" disabled>
      Create
    </button>
  </div>
  <div class="w-full px-4 pb-4 md:max-w-2xl mx-auto">
    <%= form_with url: exercises_path, method: :get, data: { controller: "search", search_target: "form", search_update_url_value: false, turbo_stream: true }, class: "relative w-full " do |f| %>
      <div class="flex gap-2 relative">
        <%= inline_svg("icons/search.svg", class: "absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400 z-50") %>
        <%= render 'shared/clearable_input' do %>
          <%= f.text_field :search,
                           value: params[:search],
                           placeholder: "Search exercises...",
                           autocomplete: :off,
                           data: { action: "search#onInput input->clearable-input#changed", search_target: "input", clearable_input_target: "input" },
                           class: "form-input pl-9 md:pl-10" %>
        <% end %>
      </div>

      <div class="grid grid-cols-2 gap-x-4 pt-4">
        <% content_for :all_equipment_trigger do %>
          <button type="button" class="btn btn-tertiary btn-sm flex items-center justify-center gap-x-2 w-full"
                  data-action="click->bottom-sheet#open">
            <%= inline_svg_tag "icons/filter.svg", class: "w-4 h-4" %>
            All Equipment
          </button>
        <% end %>

        <%= render "shared/bottom_sheet", trigger: :all_equipment_trigger do %>
          <div>
            <% Exercise.equipment_types.each do |name, value| %>
              <button type="button"
                      class="w-full text-left px-4 py-3 hover:bg-gray-100 rounded-lg flex items-center gap-x-3"
                      data-action="click->exercise-selector#filterByEquipment"
                      data-exercise-selector-equipment-id-param="<%= value %>">
                <%#= inline_svg_tag c.icon_path, class: "w-5 h-5" %>
                <span><%= name.titleize %></span>
              </button>
            <% end %>
          </div>
        <% end %>

        <% content_for :all_muscles_trigger do %>
          <button type="button" class="btn btn-tertiary btn-sm flex items-center justify-center gap-x-2 w-full"
                  data-action="click->bottom-sheet#open">
            <%= inline_svg_tag "icons/filter.svg", class: "w-4 h-4" %>
            All Muscles
          </button>
        <% end %>

        <%= render "shared/bottom_sheet", trigger: :all_muscles_trigger do %>
          <div>
            <% Category.all.order(name: :asc).each do |c| %>
              <button type="button"
                      class="w-full text-left px-4 py-3 hover:bg-gray-100 rounded-lg flex items-center gap-x-3"
                      data-action="click->exercise-selector#filterByEquipment"
                      data-exercise-selector-equipment-id-param="<%= c.id %>">
                <%#= inline_svg_tag c.icon_path, class: "w-5 h-5" %>
                <span><%= c.name %></span>
              </button>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>