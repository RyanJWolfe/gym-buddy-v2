<%# Modal backdrop %>
<div class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" data-action="click->modal#close"></div>

<div class="fixed inset-0 z-50 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="md:flex min-h-full md:justify-center md:text-center md:items-center">
    <div data-modal-target="container" class="relative transform overflow-y-auto h-screen md:h-3/5 rounded-lg bg-gray-100 px-4 pb-4 pt-5 text-left shadow-xl transition-all md:my-8 md:w-full md:max-w-2xl md:p-6">
      <div class="absolute right-0 top-0 hidden pr-4 pt-4 md:block">
        <button type="button"
                class="rounded-md bg-gray-100 text-gray-400 hover:text-gray-500 focus:outline-none"
                data-action="modal#close">
          <span class="sr-only">Close</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <%= yield %>
    </div>
  </div>
</div>