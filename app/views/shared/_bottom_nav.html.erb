<nav
  role="navigation"
  aria-label="Primary"
  class="fixed bottom-0 inset-x-0 bg-bottom-nav backdrop-blur pb-safe md:hidden z-50 shadow-top"
>
  <div class="max-w-4xl mx-auto flex items-center justify-around px-6 h-16">

    <%= link_to dashboard_path(tab: "home"),
                aria: { label: "Home" },
                class: "flex flex-col items-center gap-0.5 px-4 py-1 rounded-lg transition active:scale-95
              #{active_link_class(:home)}" do %>
      <%= inline_svg "icons/home.svg", class: "w-5 h-5 svg-thick", aria: { hidden: "true" } %>
      <span class="text-[11px] font-medium">Home</span>
