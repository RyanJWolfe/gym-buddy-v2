  aria-label="Primary"
  class="fixed bottom-0 inset-x-0 bg-bottom-nav backdrop-blur pb-safe md:hidden z-50 shadow-top"
>
  <div class="max-w-4xl mx-auto flex items-center justify-around px-6 py-3">

    <%= link_to dashboard_path,
                aria: { label: "Home" },
                class: "flex flex-col items-center gap-1 px-4 py-1 rounded-lg transition active:scale-95
