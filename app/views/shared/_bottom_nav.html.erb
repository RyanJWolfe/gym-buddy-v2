    <%= link_to new_workout_path(tab: "workout"),
                aria: { label: "New Workout" },
                class: "flex flex-col items-center gap-0.5 px-4 py-1 rounded-lg transition active:scale-95
              #{active_link_class(:workout)}" do %>
      <%= inline_svg "icons/dumbbell.svg", class: "w-5 h-5", aria: { hidden: "true" } %>
      <span class="text-[11px] font-medium">Workout</span>
    <% end %>

    <%= link_to profile_path(tab: "profile"),
                aria: { label: "Profile" },
                class: "flex flex-col items-center gap-0.5 px-4 py-1 rounded-lg transition active:scale-95
              #{active_link_class(:profile)}" do %>
      <%= inline_svg "icons/user-round.svg", class: "w-5 h-5", aria: { hidden: "true" } %>
