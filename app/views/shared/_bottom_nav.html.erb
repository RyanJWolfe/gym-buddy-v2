<nav
  role="navigation"
  aria-label="Primary"
  class="fixed bottom-0 inset-x-0 bg-white/95 backdrop-blur border-t border-gray-200/70 pb-safe md:hidden z-50"
>
  <div class="max-w-4xl mx-auto flex items-center justify-between px-6 py-3">

    <%= link_to dashboard_path,
                aria: { label: "Home" },
                class: "flex flex-col items-center gap-1 px-3 py-1 rounded-lg transition active:scale-95
              #{active_link_class(dashboard_path)}" do %>
      <i class="fas fa-home text-lg" aria-hidden="true"></i>
      <span class="text-[11px] font-medium">Home</span>
    <% end %>

    <%= link_to new_workout_path,
                aria: { label: "New Workout" },
                class: "flex flex-col items-center gap-1 px-3 py-1 rounded-lg transition active:scale-95
              #{active_link_class(new_workout_path)}" do %>
      <i class="fas fa-dumbbell text-lg" aria-hidden="true"></i>
      <span class="text-[11px] font-medium">Workout</span>
    <% end %>

    <%= link_to profile_path,
                aria: { label: "Profile" },
                class: "flex flex-col items-center gap-1 px-3 py-1 rounded-lg transition active:scale-95
              #{active_link_class(profile_path)}" do %>
      <i class="fas fa-user text-lg" aria-hidden="true"></i>
      <span class="text-[11px] font-medium">Profile</span>
    <% end %>

  </div>
</nav>
