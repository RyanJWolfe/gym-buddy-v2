<%# locals: options: [] - each option: { label:, icon:, action:, classes: path: (optional), data_attributes: (optional) } -%>

<% if options[:path] %>
  <%= link_to options[:path], class: "rounded-lg flex items-center gap-x-3 p-3 rounded-lg hover:bg-body #{options[:classes]}" do %>
    <% if options[:icon] %>
      <%= inline_svg_tag options[:icon], class: "h-6 w-6 text-muted #{options[:icon_classes]}" %>
      <span><%= options[:label] %></span>
    <% end %>
  <% end %>
<% else %>
  <%= button_tag type: :button,
                 data: { action: "#{options[:action].presence || "click->bottom-sheet#close"}", **(options[:data_attributes] || {}) },
                 class: "rounded-lg w-full text-left p-3 hover:bg-body flex items-center gap-x-3 #{options[:classes]}" do %>
    <% if options[:icon] %>
      <%= inline_svg_tag options[:icon], class: "h-6 w-6 text-muted #{options[:icon_classes]}" %>
    <% end %>
    <span><%= options[:label] %></span>
  <% end %>
<% end %>