<div class="mb-4 flex justify-center" data-controller="<%= @controller %>">
  <div data-<%= @controller.dasherize %>-target="container" class="relative inline-flex rounded-full bg-body p-1 border border-gray-200">
    <div data-<%= @controller.dasherize %>-target="slider" class="absolute top-1 bottom-1 left-0 rounded-full bg-primary-light shadow-sm" style="width:0; transform: translate3d(0,0,0); will-change: transform, width; transition: transform 360ms cubic-bezier(0.2,1.0,0.22,1.0), width 360ms cubic-bezier(0.2,1.0,0.22,1.0), box-shadow 220ms ease;"></div>

    <% base_classes = "px-4 py-1 rounded-full text-sm font-medium transition-colors focus:outline-none relative z-10" %>
    <% @items.each do |item| %>
      <% value = item[:value] || item[:label].to_s.downcase %>
      <% active = active?(value) %>
      <% text_class = active ? 'text-primary' : 'text-gray-600' %>
      <%= link_to item[:url], { class: "#{base_classes} "+text_class, data: { action: "click->#{@controller}#switch", turbo_frame: @frame, turbo_action: @turbo_action, "#{@controller.dasherize}-target" => item[:target] }, role: "tab", "aria-pressed": (active ? 'true' : 'false') } do %>
        <span><%= item[:label] %></span>
      <% end %>
    <% end %>
  </div>
</div>
